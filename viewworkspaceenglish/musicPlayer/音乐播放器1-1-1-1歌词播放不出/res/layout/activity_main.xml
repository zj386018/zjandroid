<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_mainbackground"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/main_listview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.93"
        tools:ignore="InefficientWeight" >

    </ListView>

    <SeekBar
        android:id="@+id/main_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <LinearLayout
        	android:layout_width="145dp"
        	android:layout_height="wrap_content"
        	android:orientation="vertical">
        <TextView
            android:id="@+id/mian_txtv"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="听音乐，就用乐盒"
            android:gravity="center"
            android:maxLines="1" />
        <TextView 
            android:id="@+id/main_time"
            android:gravity="center"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            />
</LinearLayout>
        <ImageButton
            android:id="@+id/main_ibt_front"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music_front"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/main_ibt_start"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music_play"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/main_ibt_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music_next"
            android:focusable="true"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>