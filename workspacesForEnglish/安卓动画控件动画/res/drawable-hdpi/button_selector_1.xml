<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    
    <item android:state_pressed="false">
		<shape >
		    <gradient android:angle="270" android:endColor="#000000" android:startColor="#ffffff"/>
		    <stroke android:width="2dp" android:color="#00aaaa" />
		    <corners android:radius="2dp" />
		    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
		</shape>        
    </item>
    
    
    <item android:state_pressed="true">
		<shape >
		    <gradient android:angle="270" android:endColor="#dadada" android:startColor="#ff8800"/>
		    <stroke android:width="2dp" android:color="#99dcdcdc"/>
		    <corners android:radius="2dp"/>
		    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
		</shape>        
    </item>
    

</selector>
